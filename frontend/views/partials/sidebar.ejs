<div class="left">
    <a class="profile">
        <div class="profile-photo">
            <% if (user != null) { %>
                <img src="../../../../api/profile/image/<%= user.profile_picture %>/uuid">
            <% } else { %>
                <img src="../../../../api/profile/image/not_loged/uuid">
            <% } %>
        </div>
        <div class="handle">
            <% if (user != null) { %>
                <h4><%= user.username %></h4>
            <% } else { %>
                <h4>Not Logged</h4>
            <% } %>
            <p class="text-muted">
                <% if (user != null) { %>
                    <%= user.username %>
                <% } else { %>
                    
                <% } %>
            </p>
        </div>
    </a>

    <!-- close button -->
    <span id="close-btn"><i class="uil uil-bars"></i></span>
    <!-- end of close button -->
    <div class="sidebar">
        <a href="../../../../../../../home" class="menu-item <%= loc == "feed" ? "active" : "nu_vreau" %>">
            <span><i class="uil uil-newspaper"></i></span><h3>Feed</h3>
        </a>
        <a href="../../../../../../../clips" class="menu-item <%= loc == "clips" ? "active" : "nu_vreau" %>">
            <span><i class="uil uil-compass"></i></span><h3>Clips</h3>
        </a>
        <a href="../../../../../../../messages" class="menu-item <%= loc == "messages" ? "active" : "nu_vreau" %>" id="messages-notification">
            <span><i class='bx bx-paper-plane bx-tada'><small class="notification-count">6</small></i></span><h3>Messagse</h3>
        </a>
        <a href="../../../../../../../saved" class="menu-item <%= loc == "saved" ? "active" : "nu_vreau" %>">
            <span><i class="uil uil-bookmark"></i></span><h3>Saved</h3>
        </a>
        <a class="menu-item" id="theme">
            <span><i class="uil uil-swatchbook"></i></span><h3>Theme</h3>
        </a>
        <a href="<%= user != null ? "../../../../../../../home/profile/" + user.id : "../../../../../../../auth/login" %>" class="menu-item <%= loc == "account" ? "active" : "nu_vreau" %>">
            <span><i class="uil uil-user-square"></i></span><h3>Account</h3>
        </a>                        
    </div>
    <label for="create-post" class="btn btn-primary" onclick="newPost()">New Post</label>
</div>